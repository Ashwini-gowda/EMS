<div class="container">
  <h1>Employees Details</h1>
  <%= link_to 'New Employee', new_employee_path, class: "btn btn-info btn-sm" %>
</div>
<br/>
<div class="container">
<div class="table-wrapper-scroll-y my-custom-scrollbar">
 <table class="table table-bordered table-hover mb-0" >
    <thead >
      <tr>
      <th scope="col">Eid</th>
        <th scope="col">Name</th>
        <th scope="col">Gender</th>
        <th scope="col">Joining_date</th>
        <th scope="col">Phone_number</th>
        <th scope="col" colspan="3"> Modification</th>
      </tr>
    </thead>
  
    <tbody >
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.eid %></td>
          <td><%= employee.name %></td>
          <td><%= employee.gender %></td>
          <td><%= employee.joining_date %></td>
          <td><%= employee.phone_number %></td>
          <td><%= link_to 'Show', employee, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-success btn-sm" %></td>
          <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
