<div class="container">
<h3>Previousholders</h3>
<%= link_to 'New Previousholder', new_previousholder_path, class: "btn btn-info btn-sm" %>
</div>
<br/>
<div class="container">
 <table class="table table-bordered table-hover" height="50px">
    <thead>
      <tr>
        <th scope="col">From date</th>
        <th scope="col">To date</th>
        <th scope="col">Remark</th>
        <th scope="col">Item</th>
        <th scope="col" colspan="3">Modification</th>
      </tr>
    </thead>
    <tbody style="height:50px;overflow-y:auto;  ">
      <% @previousholders.each do |previousholder| %>
        <tr>
          <td><%= previousholder.from_date %></td>
          <td><%= previousholder.to_date %></td>
          <td><%= previousholder.remark %></td>
          <td><%= previousholder.item_id %></td>
          <td><%= link_to 'Show', previousholder, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_previousholder_path(previousholder), class: "btn btn-success btn-sm" %></td>
          <td><%= link_to 'Destroy', previousholder, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
  </tbody>
</table>




