<div class="container">
  <%= simple_form_for(@previousholder) do |f| %>
  <div class="form-inputs justify-content-center col-lg-10">
    <%= f.input :employee_id, collection: Employee.all, label_method: :name_with_eid, value_method: :id %>
    <%= f.input :item_id, collection: Item.all, label_method: :name_with_id, value_method: :id %>
    <%= f.input :from_date, as: :date_time_picker, 
      input_html:
      { data:
        {
          date_format: "YYYY.MM.DD hh:mm A",
          date_day_view_header_format: 'MMM YYYY',
          date_side_by_side: true,
          date_min_date: Time.current.strftime('%Y-%m-%d')
        }
      }  
    %>
    <%= f.input :to_date, as: :date_time_picker, 
      input_html:
      { data:
        {
          date_format: "YYYY.MM.DD hh:mm A",
          date_day_view_header_format: 'MMM YYYY',
          date_side_by_side: true,
          date_min_date: Time.current.strftime('%Y-%m-%d')
        }
      } 
    %>
    <%= f.input :remark %>
</div>

  <div class="actions">
    <%= f.button :submit, class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
</div>
<script type="text/javascript">
  
  $(".datepicker" ).datepicker({
    dateFormat: 'dd/mm/yy hh:mm:ss',
    changeMonth: true,
    changeYear: true,
    minDate: 0
  });
</script>
