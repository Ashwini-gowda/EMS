<div class="container">
  <%= simple_form_for(@previousholder) do |f| %>
  <div class="form-inputs">
    <%= f.input :employee_id, collection: Employee.all, label_method: :name_with_eid, value_method: :id %>
    <%= f.input :item_id, collection: Item.all, label_method: :name_with_id, value_method: :id %>
    <%= f.label :from_date %>
    <%= f.datetime_select :from_date %><br>
    <%= f.label :to_date%>
    <%= f.datetime_select :to_date %><br>
    <%= f.input :remark %><br>
</div>

  <div class="actions">
    <%= f.button :submit, class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
</div>
